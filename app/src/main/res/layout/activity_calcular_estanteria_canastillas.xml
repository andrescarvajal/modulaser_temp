            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/canastillas41Perforada"
            android:layout_toRightOf="@+id/menosModulos"
            android:background="@null"
            android:hint="0"
            android:inputType="number"
            android:maxLength="6"
            android:padding="0dp"
            android:textAlignment="center"
            android:textSize="@dimen/size_text_variable" />

        <!-- Tapa normalizada -->

        <TextView
            android:id="@+id/tapaNormalizada"
            android:layout_width="@dimen/size_accessorio_layout_variable"
            android:layout_height="wrap_content"
            android:layout_below="@+id/canastillas41Cerrada"
            android:text="@string/tapa_normatizada"
            android:textSize="@dimen/size_text_variable"></TextView>

        <EditText
            android:id="@+id/tapaNormalizadaSelec"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/canastillas41Cerrada"
            android:layout_toRightOf="@+id/menosModulos"
            android:background="@null"
            android:hint="0"
            android:inputType="number"
            android:maxLength="6"
            android:padding="0dp"
            android:textAlignment="center"
            android:textSize="@dimen/size_text_variable" />

        <!-- ========================================================
    ================== Seleccion de Checkboxes  =================
    ========================================================= -->

        <!-- Acero Inoxidable -->

        <CheckBox
            android:id="@+id/checkBoxAceroInoxidable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tapaNormalizada"
            android:layout_marginTop="16dp"
            android:text="@string/check_box_acero_inoxidable"
            android:textSize="@dimen/size_text_variable" />

        <!-- Costado -->

        <CheckBox
            android:id="@+id/checkBoxCostado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxAceroInoxidable"
            android:text="@string/check_box_costado"
            android:textSize="@dimen/size_text_variable" />

        <!-- ========================================================
    ================== Seleccion de Resultados  =================
    ========================================================= -->

        <!-- Boton Calcular -->

        <Button
            android:id="@+id/calcularEstCanastillas"
            android:layout_width="@dimen/size_button_calcular_variable"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxCostado"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/string_boton_calcular__est_canastillas"
            android:textAllCaps="false"
            android:textSize="@dimen/size_text_variable"></Button>

        <!-- Resultado del calculo -->

        <TextView
            android:id="@+id/textoResultado"
            android:layout_width="@dimen/size_text_resultado_layout_variable"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calcularEstCanastillas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/default_resultado"
            android:textAlignment="center"
            android:textSize="@dimen/size_text_resultado_variable"></TextView>

    </RelativeLayout>

</ScrollView>